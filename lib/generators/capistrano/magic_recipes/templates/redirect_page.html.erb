<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta http-equiv="x-ua-compatible" content="ie=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <title>Wir werden <%= fetch(:redirect_new_name) %></title>
  <script src="https://cdn.jsdelivr.net/npm/vue"></script>
  
  <style>
    html, body {
      width: 100%;
      height: 100%;
      margin: 0;
      padding: 0;
      font-size: 18px;
      font-family: Lucida, Verdana, Arial, sans-serif;
      line-height: 1.6;
      color: #333;
      background: #fff;
    }
    #app {
      height: 100vh;
      width: 100vw;
      display: flex;
      justify-content: center;
      align-items: center;
    }
    .box {
      display: block; position: relative;
      width: 60%;
      max-width: 600px;
      padding: 20px;
      text-align: center;
    }
    a, p {
      display: block; position: relative;
      margin: 0;
      padding: 0;
    }
    a {
      color: #000;
      text-decoration: none;
    }
    a:hover {
      text-shadow: 0 0 2px #069;
    }
    .gets {
      font-size: 80%;
      color: rgb(102,102,102);
    }
    .small {
      font-size: 60%;
      color: rgb(102,102,102);
    }
    .new { font-size: 120%; }
    @media (min-width: 600px) {
      html, body {
        font-size: 24px;
      }
    }
    @media (min-width: 1200px) {
      html, body {
        font-size: 32px;
      }
    }
  </style>
  
</head>
<body>
  <div id="app">
    <div class="box">
      <p class="old">{{ domain }}</p>
      <p class="gets">wird zu</p>
      <a class="new" href="<%= fetch(:redirect_new_domain) %>"><%= fetch(:redirect_new_name) %></a>
      <br>
      <p class="small">
        Du wirst 
        <span v-if="count > 0">in {{ count }} Sekunden</span> 
        <span v-else>jetzt</span> 
        automatisch weitergeleitet.</p>
    </div>
  </div>
  <script>
    var app = new Vue({
      el: '#app',
      data: {
        domain: String(window.location).split('://')[1].split('/')[0],
        count: 10,
        interval: null
      },
      methods: {
        startInterval() {
          console.log('domain =>  ' + this.domain)
          console.log('start CountDown .. ', this.count)
          let that = this 
          this.interval = setInterval(function(){
            console.log('CountDown:  ',  that.count)
            that.count = that.count - 1
            if (this.count < 0) {
              window.location = '<%= fetch(:redirect_new_domain) %>'
            }
          }, 990);
        }
      },
      created: function () {
        if (this.interval) { clearInterval(this.interval) }
        this.startInterval()
      }
    })
  </script>
</body>
</html>
